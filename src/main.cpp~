#include <iostream>
#include <ncurses.h> 
#include <unistd.h>
#include <cstdlib>

bool gameOver;
const int width = 20;
const int height = 20;
int x, y, fruitX, fruitY, score; 
int tailX[100], tailY[100];
int nTail; 
enum eDirection { STOP = 0, LEFT, RIGHT, UP, DOWN };
eDirection dir;

void Setup () {
	initscr();
	clear();
	noecho();
	cbreak();
	curs_set(0);
	gameOver = true;
	dir = STOP;
	x = width / 2;
	y = height / 2;
	fruitX = rand() % width; 
	fruitY = rand() % height; 
	score = 0;
	// drawing the snake :)) 
	for (int i = 0; i < nTail ; ++i) 
		mvprintw(tailY[i], tailX[i], "o");
	mvprintw(fruitY, fruitX, "F");
	mvprintw(height + 3, 0, "score: %d", score);
	refresh();
}

void Draw() {
	clear();
	for (int i = 0; i < width + 2 ; ++i)
		mvprintw(0, i , "#");
	for (int i = 0; i < height + 2 ; ++i)
		mvprintw(0, i , "#");
	for (int i = 0; i < width + 2 ; ++i)
		mvprintw(height + 1, i , "#");
	for (int i = 0; i < height + 2 ; ++i)
		mvprintw(i , width + 1 ,"#");

	// drawing the snake :)) 
	for (int i = 0; i < nTail ; ++i) 
		mvprintw(tailY[i], tailX[i], "o");
	mvprintw(fruitY, fruitX, "F");
	mvprintw(height + 3, 0, "score: %d", score);
	refresh();
}

void Input() {
	keypad(stdscr, TRUE);
	halfdelay(1);
	int c = getch();
	switch (c) {
		case KEY_LEFT:
		  dir = LEFT;
		  break;
		case KEY_RIGHT:
		  dir = RIGHT;
		  break;
		case KEY_UP:
		  dir = UP;
		  break;
		case KEY_DOWN:
		  dir = DOWN;
		  break;
		case 'q':
		  gameOver = false;
		  break;
	}

} 

void Logic() {
	int prevY = tailY[0];
	int prevX = tailX[0];
	int prevX2, prevY2;
	tailX[0] = x;
	tailY[0] = y;
	
	for (int i = 1; i < nTail; ++i) {
		prev2X = tailX[i];
		prev2Y = tailY[i];
		tailX[i] = prevX;
		tailY[i] = prevY;
		prevX = prev2X;
		prevY = prev2Y;
	}
	switch (dir) {
		case LEFT:
		x--;
		break;
		case RIGHT:
		x++;
		break;
		case UP:
		y--;
		break;
		case DOWN:
		y++;
		break;
		default:
		break;
	}
	
	if (x >= width) x = 0; else if (x < 0) x = width - 1; 
	if (y >= height) y = 0; else if (y < 0) y = height - 1;
	
	for (int = 0; i < nTail ; ++i) {
		if (tailX[i] == x && tailY[i] == y) 
			gameOver = false;
	
	if (x == fruitX && y == fruitY) {
		score += 10;
		fruitX = rand() % width; 
		fruitY = rand() % height; 
		++nTail;
	}
}

int main () {
	clear();
	Setup();
	while (!gameOver) {
		Draw();
		Input();
		Logic();
		usleep(100000);
	}
	endwin();
	return 0;
}

